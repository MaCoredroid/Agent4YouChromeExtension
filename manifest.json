{
    "name": "OpenAI Hover Helper",
    "version": "0.1",
    "description": "Right-click on selected text to get OpenAI response and display in a hover window.",
    "manifest_version": 3,
    
    
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting",
      "storage"
    ],
  
    
    "host_permissions": [
      "<all_urls>"
    ],
  
   
    "background": {
      "service_worker": "background.js"
    },
  
   

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "marked.min.js",       
          "contentScript.js"    
        ]
      }
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    }
  
  }
  